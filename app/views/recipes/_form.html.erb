<%= form_for [user, recipe] do |f| %>
  <%= f.hidden_field :user_id %>
  <strong><%= f.label :name %></strong><br>
  <%= f.text_field :name %><br>
  <strong><%= f.label :time %></strong><br>
  <%= f.number_field :time %> minutes <br>
  <strong><%= f.label :ingredients %></strong><br>
  <%= f.fields_for :ingredients do |i| %>
    <%= i.fields_for :quantities do |q| %>
      <%= q.label :amount %>
      <%= q.text_field :amount %>
    <% end %>
    <%= i.label :name %>
    <%= i.text_field :name %><br>
  <% end %>
  <strong><%= f.label :instructions %></strong><br>
  <%= f.text_area :instructions %><br>
  <%= f.submit %>
<% end %>
