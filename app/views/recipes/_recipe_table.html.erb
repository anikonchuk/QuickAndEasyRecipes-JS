<table>
  <thead>
    <th>Recipe Name</th>
    <th>Time</th>
    <th>Ingredient Count</th>
  </thead>
  <tbody>
    <% recipes.each do |recipe| %>
      <tr>
        <td><%= link_to recipe.name, recipe_path(recipe) %></td>
        <td><%= recipe.time %> minutes</td>
        <td><%= plural_ingredients recipe %></td>
      </tr>
    <% end %>
  </tbody>
</table>
