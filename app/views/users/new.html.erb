<h1>Sign Up</h1>
<h3>Sign up for a new account below.</h3>

<%= render partial: "recipes/errors", locals: {object: @user} %>

<%= form_for @user do |f| %>
  <%= f.label :email %><br>
  <%= f.text_field :email %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>
  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation %><br>
  <%= f.submit %>
<% end %>

<%= link_to "Log in with Github", "/auth/github" %>
