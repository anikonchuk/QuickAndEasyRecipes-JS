<!DOCTYPE html>
<html>
  <head>
    <title>QuickAndEasyRecipes</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div>
            <ul class="nav navbar-nav">
              <li><%= link_to "All Recipes", recipes_path %></li>
              <li><%= link_to "Your Recipes", user_recipes_path(current_user) %></li>
              <li><%= link_to "Recipes by Ingredient", ingredients_path %></li>
              <li><%= link_to "New Recipe", new_user_recipe_path(current_user) %></li>
              <li><%= link_to "Logout", logout_path %></li>
            </ul>
          </div>
        </div>
      </nav>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
