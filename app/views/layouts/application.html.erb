<!DOCTYPE html>
<html>
  <head>
    <title>QuickAndEasyRecipes</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if logged_in? %>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div>
            <ul class="nav navbar-nav">
              <li><%= link_to "All Recipes", recipes_path, :id => "all-recipes-link" %></li>
              <li><%= link_to "Your Recipes", user_recipes_path(current_user), :id => "user-recipes-link" %></li>
              <li><%= link_to "Recipes by Ingredient", ingredients_path, :id => "ingredients-link" %></li>
              <li><%= link_to "New Recipe", new_user_recipe_path(current_user), :id => "new-recipe-link" %></li>
              <li><%= link_to "Logout", logout_path %></li>
            </ul>
          </div>
        </div>
      </nav>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
